        "prettier": "^2.8.3",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "28.0.8",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "4.1.0",
        "typescript": "^4.9.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "pnpm": {
        "peerDependencyRules": {
            "allowAny": [
                "@nestjs/common"
            ],
            "ignoreMissing": [
                "webpack"
            ]
        }
    }
