        "@nestjs/typeorm": "^9.0.1",
        "bcrypt": "^5.1.0",
        "bullmq": "^1.91.1",
        "chalk": "^4.1.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "dayjs": "^1.11.7",
        "deepmerge": "^4.3.0",
        "dotenv": "^16.0.3",
        "email-templates": "^10.0.1",
        "fastify": "^4.12.0",
        "fastify-swagger": "^5.2.0",
        "find-up": "^5.0.0",
        "ioredis": "^5.3.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mysql2": "^2.3.3",
        "nestjs-typeorm-paginate": "^4.0.3",
        "nodemailer": "^6.9.1",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
